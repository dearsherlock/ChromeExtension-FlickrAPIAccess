{
  "manifest_version": 2,
  "name": "Sherlock DownFlickr - Flickr Downloader",
  "version": "0.5.2",
  "description": "sherlock Flickr photos downloader extension.",

  "background": {
    "scripts": ["background.js"]/*,
    "persistent": false*/
  },

  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "DownFlickr",
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.flickr.com/",
    "http://api.flickr.com/",
    "tabs"
  ]

}